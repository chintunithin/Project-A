            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.2);
        }

        .hero-content h1 {
            font-size: 2.5rem;
            color: #efe5e5;
            text-shadow: -1px -1px 0 #000, 1px -1px 0 #000, -1px 1px 0 #000, 1px 1px 0 #000 !important;
        }

        .hero-content p {
            font-size: 1.2rem;
            color: #f5efef;
            text-shadow: -1px -1px 0 #000, 1px -1px 0 #000, -1px 1px 0 #000, 1px 1px 0 #000 !important;
            margin-top: 10px;
        }

        /* Main Container */
        .container {
            width: 90%;
            max-width: 1200px;
            margin: auto;
            padding: 50px 0;
        }

        /* Sections */
        .np-section {
            margin-bottom: 50px;
            text-align: center;
        }

        .np-section h2 {
            font-size: 2rem;
            color: #333;
            margin-bottom: 20px;
        }

        .np-section p {
            font-size: 1.1rem;
            color: #555;
            max-width: 800px;
            margin: 0 auto;
        }

        /* Key Solutions Grid */
        .grid {
            display: flex;
            flex-wrap: wrap;
            gap: 20px;
            justify-content: center;
            margin-top: 30px;
        }

        .nf-card {
            background: #f9f9f9;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            flex: 1 1 calc(50% - 20px);
            min-width: 300px;
            text-align: center;
        }

        .nf-card h3 {
            color: #ff7700ef;
            margin-bottom: 10px;
        }

        /* Technology Stack */
        .tools {
            background: #f1f1f1;
            padding: 30px;
            border-radius: 8px;
            margin-top: 20px;
            text-align: center;
        }

        /* Call to Action */
