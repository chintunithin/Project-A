    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: Arial, sans-serif;
        }

        /* Hero Section */
        .hero {
            position: relative;
            height: 80vh;
            background: url('images/notforprofit.webp') no-repeat center center/cover;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .hero-content {
            background: rgba(5, 5, 5, 0.3);
            padding: 30px;
            text-align: center;
            border-radius: 10px;
            max-width: 600px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.2);
        }

        .hero-content h1 {
            font-size: 2.5rem;
            color: #efe5e5;
            text-shadow: -1px -1px 0 #000, 1px -1px 0 #000, -1px 1px 0 #000, 1px 1px 0 #000 !important;
        }

        .hero-content p {
            font-size: 1.2rem;
            color: #f5efef;
            text-shadow: -1px -1px 0 #000, 1px -1px 0 #000, -1px 1px 0 #000, 1px 1px 0 #000 !important;
            margin-top: 10px;
        }

        /* Main Container */
        .container {
            width: 90%;
            max-width: 1200px;
            margin: auto;
            padding: 50px 0;
        }

        /* Sections */
        .np-section {
            margin-bottom: 50px;
            text-align: center;
        }

        .np-section h2 {
            font-size: 2rem;
            color: #333;
            margin-bottom: 20px;
        }

        .np-section p {
            font-size: 1.1rem;
            color: #555;
            max-width: 800px;
            margin: 0 auto;
        }

        /* Key Solutions Grid */
        .grid {
            display: flex;
            flex-wrap: wrap;
            gap: 20px;
            justify-content: center;
            margin-top: 30px;
        }

        .nf-card {
            background: #f9f9f9;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            flex: 1 1 calc(50% - 20px);
            min-width: 300px;
            text-align: center;
        }

        .nf-card h3 {
            color: #007bff;
            margin-bottom: 10px;
        }

        /* Technology Stack */
        .tools {
            background: #f1f1f1;
            padding: 30px;
            border-radius: 8px;
            margin-top: 20px;
            text-align: center;
        }

        /* Call to Action */
        .cta {
            text-align: center;
            margin-top: 50px;
        }

        .cta-footer a {
            display: inline-block;
            padding: 15px 30px;
            background: #007bff;
            color: white;
            text-decoration: none;
            border-radius: 5px;
            font-size: 1.2rem;
        }

        @media (max-width: 768px) {
            .grid {
                flex-direction: column;
            }

            .nf-card {
                flex: 1 1 100%;
            }
        }
    </style>
