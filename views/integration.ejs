/* Card Sections */
.card {
    background: rgba(255, 255, 255);
    padding: 30px;
    border-radius: 15px;
    border: 1px solid orange;
    margin: 50px 0;
    box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
    transition: transform 0.3s ease-in-out, box-shadow 0.3s ease-in-out;
    overflow: hidden;
    cursor: pointer;
    display: flex;
    align-items: center;
    gap: 20px;
    animation: slideUp 0.5s ease-in-out;
}

.card:hover {
    transform: scale(1.05);
    box-shadow: 0 12px 24px rgba(0, 0, 0, 0.3);
}

.card img {
    width: 250px;
    height: 250px;
    border-radius: 10px;
    transition: transform 0.5s ease-in-out;
}

.card:hover img {
    transform: scale(1.1);
}

.card-content {
    flex: 1;
}

.card h2 {
    font-size: 2rem;
    color: #ff7f50;
    margin-bottom: 15px;
}

.card ul {
    list-style: none;
    padding: 0;
}

.card ul li {
    font-size: 1.2rem;
    padding: 10px 0;
    border-left: 5px solid #ff7f50;
    padding-left: 20px;
    transition: all 0.3s ease-in-out;
    color: black;
}

.card ul li:hover {
    background: rgba(255, 127, 80, 0.15);
    padding-left: 25px;
}



/* Animations */
@keyframes fadeIn {
    from {
        opacity: 0;
        transform: translateY(-20px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

@keyframes slideUp {
    from {
        opacity: 0;
        transform: translateY(20px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

@keyframes pulse {
    0% {
        transform: scale(1);
    }
    50% {
        transform: scale(1.05);
    }
    100% {
        transform: scale(1);
    }
}

/* Responsive Design */
@media (max-width: 900px) {
