            align-items: center;
            gap: 10px;
            color: #2c3e50;
        }

        .contact-item i {
            color: #ff7f50;
            font-size: 1.2rem;
        }

        .cta-section {
            background: #fff;
            color: #2c3e50;
            text-align: center;
            padding: 60px 20px;
            margin-top: 60px;
            position: relative;
            overflow: hidden;
            border-top: 1px solid rgba(255, 127, 80, 0.1);
            border-bottom: 1px solid rgba(255, 127, 80, 0.1);
        }

        .cta-wrapper {
            max-width: 800px;
            margin: 0 auto;
            position: relative;
            z-index: 2;
        }

        .cta-section h2 {
            font-family: 'Poppins', 'Roboto', sans-serif;
            font-size: 2.2rem;
            margin-bottom: 25px;
            position: relative;
            display: inline-block;
        }

        .cta-section h2::after {
            content: '';
            position: absolute;
            bottom: -8px;
            left: 50%;
            transform: translateX(-50%);
            width: 60px;
            height: 2px;
            background: #ff7f50;
            opacity: 0.3;
        }

        .cta-button {
            display: inline-block;
            padding: 12px 32px;
            background: transparent;
            color: #2c3e50;
            text-decoration: none;
            border-radius: 30px;
            font-weight: 500;
            transition: all 0.3s ease;
            border: 2px solid rgba(255, 127, 80, 0.3);
            position: relative;
            overflow: hidden;
            font-size: 1rem;
            letter-spacing: 0.5px;
        }

        .cta-button:hover {
            border-color: #ff7f50;
            background: rgba(255, 127, 80, 0.05);
            transform: translateY(-2px);
        }

        @keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        @keyframes lineExpand {
            from {
                width: 0;
            }
            to {
                width: 60px;
            }
        }

        @media (max-width: 768px) {
            .hero {
                background-attachment: scroll;
                padding: 80px 20px 100px;
            }
