@import url('https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600;700&family=Roboto:wght@300;400;500;700&display=swap');
        
        body {
           font-family: 'Poppins', 'Roboto', sans-serif;
            background: #fafafa;
            color: #2c3e50;
            margin: 0;
            padding: 0;
            line-height: 1.6;
        }

        .hero {
            background: linear-gradient(135deg, rgba(255, 245, 240, 0.9), rgba(255, 255, 255, 0.9)), url('/images/tech-implementation-bg.jpg');
            background-size: cover;
            background-position: center;
            background-attachment: fixed;
            color: #2c3e50;
            text-align: center;
            padding: 100px 20px 120px;
            position: relative;
            overflow: hidden;
            border-bottom: 1px solid rgba(255, 127, 80, 0.1);
        }

        .hero::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: radial-gradient(circle at 70% 30%, rgba(255, 127, 80, 0.1) 0%, transparent 70%);
            z-index: 1;
        }

        .hero-content {
            position: relative;
            z-index: 2;
            max-width: 1000px;
            margin: 0 auto;
        }

        .hero h1 {
            font-family: 'Poppins', 'Roboto', sans-serif;
            font-size: 4rem;
            margin-bottom: 30px;
            position: relative;
            display: inline-block;
            color: #2c3e50;
            opacity: 0;
            transform: translateY(20px);
            animation: fadeInUp 0.8s ease-out forwards;
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.1);
        }

        .hero h1::after {
            content: '';
            position: absolute;
            bottom: -10px;
            left: 50%;
            transform: translateX(-50%);
            width: 0;
            height: 2px;
            background: rgba(255, 127, 80, 0.3);
            animation: lineExpand 0.6s ease-out 0.8s forwards;
        }

        .hero p {
            font-size: 1.25rem;
            max-width: 800px;
            margin: 0 auto;
            position: relative;
            line-height: 1.8;
            color: #2c3e50;
            opacity: 0;
            transform: translateY(20px);
            animation: fadeInUp 0.8s ease-out 0.4s forwards;
            text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.05);
        }

        .content-container {
            max-width: 1400px;
            margin: -60px auto 40px;
            padding: 0 40px;
            position: relative;
            z-index: 2;
        }

        .section-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
            gap: 40px;
            margin: 40px 0;
            justify-items: center;
        }

        .classic-card {
            background: white;
            border-radius: 12px;
            padding: 40px;
            transition: all 0.4s cubic-bezier(0.165, 0.84, 0.44, 1);
            position: relative;
            overflow: visible;
            box-shadow: 0 4px 20px rgba(0,0,0,0.05);
            width: 100%;
            max-width: 400px;
            cursor: pointer;
            z-index: 1;
        }

        .classic-card::after {
            content: '';
            position: absolute;
            top: 0;
            right: 0;
            width: 4px;
            height: 0;
            background: #ff7f50;
            transition: height 0.4s ease;
        }

        .classic-card:hover {
            z-index: 2;
        }

        .classic-card:hover::after {
            height: 100%;
        }

        .classic-card h2 {
            font-family: 'Poppins', 'Roboto', sans-serif;
            color: #2c3e50;
            font-size: 1.8rem;
            margin-bottom: 20px;
            position: relative;
            padding-bottom: 15px;
        }

        .classic-card h2::after {
            content: '';
            position: absolute;
            bottom: 0;
            left: 0;
            width: 40px;
            height: 2px;
            background: #ff7f50;
            transition: width 0.3s ease;
        }

        .classic-card:hover h2::after {
            width: 80px;
        }

        .classic-card p {
            color: #5d6d7e;
            line-height: 1.8;
            position: relative;
            margin: 0;
        }

        .popup-content {
            position: fixed;
            width: 300px;
            background: white;
            padding: 20px;
            border-radius: 15px;
            box-shadow: 0 15px 40px rgba(0, 0, 0, 0.1);
            opacity: 0;
            visibility: hidden;
            transition: all 0.3s ease;
            border: 2px solid #ff6b6b;
            z-index: 99999;
            pointer-events: none;
        }

        .classic-card:hover .popup-content {
            opacity: 1;
            visibility: visible;
            pointer-events: auto;
        }

        .popup-content h4 {
            color: #ff6b6b;
            font-size: 1.2rem;
            margin-bottom: 15px;
            font-weight: 600;
        }

        .popup-content p {
            color: #2d3436;
            font-size: 0.9rem;
            line-height: 1.6;
            margin-bottom: 15px;
        }

        .popup-content ul {
            list-style: none;
            padding: 0;
            margin: 0;
            text-align: left;
        }

        .popup-content ul li {
            color: #636e72;
            font-size: 0.9rem;
            padding: 5px 0;
            position: relative;
            padding-left: 20px;
        }

        .popup-content ul li::before {
