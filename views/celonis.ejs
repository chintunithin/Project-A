    </section>

    <!-- Section Title & Subtitle -->
    <div class="celonis-section-title">Celonis Solutions</div>
    <div class="celonis-section-subtitle">Unlock process excellence and business value with process mining, automation, and real-time analytics</div>

    <!-- Main Content as Cards Grid -->
    <div class="celonis-grid">
      <div class="card" data-aos="fade-up">
