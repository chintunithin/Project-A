.dynamic-section {
    padding: 50px 5%;
    background-color: #f9f7f1; /* Light newspaper-like background */
    display: flex;
    justify-content: center;
}

.Event-Container {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr)); /* Responsive grid */
    gap: 20px;
    width: 100%;
    max-width: 1200px;
}

.Event-Box {
    position: relative;
    background-size: cover;
    background-position: center;
    border: 2px solid #ff9800; /* Light orange border */
    padding: 20px;
    box-shadow: 5px 5px 0px rgba(0, 0, 0, 0.2);
    transition: transform 0.3s ease-in-out;
    min-height: 250px;
    display: flex;
    align-items: flex-end;
    justify-content: center;
}

.Event-Box:hover {
    transform: scale(1.03);
}

.box {
    background: rgba(255, 255, 255, 0.85); /* Semi-transparent white for a vintage feel */
    padding: 20px;
    border-radius: 5px;
    font-family: 'EB Garamond', serif; /* Classic newspaper-like font */
    text-align: center;
    width: 100%;
}

.box h3 {
    font-size: 22px;
    font-weight: 700;
    margin-bottom: 10px;
    color: #222;
    text-transform: uppercase;
}

.box p {
    font-size: 16px;
    color: #444;
    font-style: italic;
}

.box a {
    display: inline-block;
    margin-top: 10px;
    padding: 8px 12px;
    background: #ff9800;
    color: white;
    text-decoration: none;
    font-weight: bold;
    border-radius: 3px;
    box-shadow: 3px 3px 0px rgba(0, 0, 0, 0.2);
}

.box a:hover {
    background: #e68900;
    box-shadow: 4px 4px 0px rgba(0, 0, 0, 0.3);
}

/* Media Queries for Better Responsiveness */
@media (max-width: 768px) {
