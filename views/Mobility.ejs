            color: #ff6b6b;
            position: absolute;
            left: 0;
            font-size: 1.2rem;
        }

        .section div:hover .popup-content {
            opacity: 1;
            visibility: visible;
            pointer-events: auto;
        }

        /* Position popups based on their position in the grid */
        .section div:nth-child(3n+1) .popup-content {
            left: calc(50% + 0px);
        }

        .section div:nth-child(3n+2) .popup-content {
            left: calc(50% + 0px);
        }

        .section div:nth-child(3n+3) .popup-content {
            left: calc(50% + 0px);
        }

        /* Position popups for bottom row */
        .section div:nth-last-child(-n+3) .popup-content {
            bottom: 100%;
            top: auto;
        }

        /* Position popups for other rows */
        .section div:not(:nth-last-child(-n+3)) .popup-content {
            top: 100%;
        }

        .section div:not(:nth-last-child(-n+3)) .popup-content::before {
            top: -10px;
            border-bottom: 10px solid #ff6b6b;
        }

        .section div:nth-last-child(-n+3) .popup-content::before {
            bottom: -10px;
            border-top: 10px solid #ff6b6b;
        }

        /* Responsive adjustments */
