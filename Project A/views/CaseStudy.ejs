  <script>
    AOS.init({
      duration: 1000,
      easing: 'ease-in-out',
      once: true
    });

    // SweetAlert2 function to show case study info
    function showCaseStudy(title, description) {
      Swal.fire({
        title: title,
        text: description,
        icon: 'info',
        confirmButtonText: 'Close',
        confirmButtonColor: '#f97316',
        background: '#fff',
        color: '#333',
        backdrop: true,
        padding: '1.5rem'
      });
    }
