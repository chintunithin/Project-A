        .feedback-container {
            background: #ffcc80;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0px 5px 15px rgba(0, 0, 0, 0.2);
            width: 400px;
            text-align: center;
        }
        .feedback-container h2 {
            color: #e65100;
        }
        .feedback-container input,.feedback-container textarea,.feedback-container select {
            width: 100%;
            padding: 12px;
            margin-top: 10px;
            border: 2px solid #e65100;
            border-radius: 5px;
            font-size: 16px;
            background: #fff;
            transition: all 0.3s ease-in-out;
        }
        .feedback-container input:focus,.feedback-container textarea:focus,.feedback-container select:focus {
            border-color: #ff9800;
            box-shadow: 0 0 10px rgba(255, 152, 0, 0.5);
            outline: none;
        }
        .feedback-container select {
            appearance: none;
            background: url('data:image/svg+xml;utf8,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="black"><path d="M7 10l5 5 5-5z"/></svg>') no-repeat right 10px center;
            background-size: 20px;
        }
        .feedback-container button {
            background: #e65100;
            color: white;
            padding: 12px;
            border: none;
            border-radius: 5px;
            margin-top: 15px;
            cursor: pointer;
            font-size: 16px;
            transition: 0.3s;
        }
        .feedback-container button:hover {
            background: #ff9800;
        }
    </style>
</head>
